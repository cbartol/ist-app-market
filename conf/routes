# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET			/							controllers.Application.index()
GET			/language					controllers.Application.changeLang(lang: String, url: String)

# Login

GET			/login						controllers.Application.login()
GET			/logout						controllers.Application.logout()
POST		/login						controllers.Application.authenticate()

GET			/auth/fenix					controllers.Application.signIn()
GET			/auth/fenix/callback		controllers.Application.callback()

# Register

GET			/register					controllers.Application.register()

# Users          
GET			/users/:username			controllers.UserController.user(username : String)
GET			/users						controllers.UserController.users()
POST		/users						controllers.UserController.newUser()
POST		/users/:username/delete		controllers.UserController.deleteUser(username: String)

# Apps

GET			/apps						controllers.AppController.apps()
GET			/apps/:id					controllers.AppController.app(id: Long)
GET			/users/:username/apps		controllers.AppController.userApps(username: String)
GET			/users/:username/apps/new	controllers.AppController.newApplication(username: String)
POST		/users/app					controllers.AppController.newApp()
POST		/apps/:id/delete			controllers.AppController.deleteApp(id: Long)

# Map static resources from the /public folder to the /assets URL path

GET			/assets/*file				controllers.Assets.at(path="/public", file)
