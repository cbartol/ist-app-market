# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /								controllers.Application.index()

# Users          
GET     /users							controllers.UserController.users()
POST    /users							controllers.UserController.newUser()
POST    /users/:username/delete			controllers.UserController.deleteUser(username: String)
GET		/users/:username/apps			controllers.AppController.apps(username: String)

# Apps
POST	/user/app						controllers.AppController.newApp()
POST	/apps/:id/delete				controllers.AppController.deleteApp(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file					controllers.Assets.at(path="/public", file)
